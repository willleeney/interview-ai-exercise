install:
	uv sync --all-extras

########################################################################################################################
# Quality checks
########################################################################################################################

test:
	uv run pytest tests

lint:
	uv run ruff check ai_exercise tests

format:
	uv run ruff check ai_exercise tests --fix

typecheck:
	uv run mypy ai_exercise


########################################################################################################################
# Api
########################################################################################################################

start-api:
	docker compose up

dev-api:
	uv run ai_exercise/main.py

########################################################################################################################
# Streamlit
########################################################################################################################

start-app:
	uv run streamlit run demo/main.py


########################################################################################################################
# Evals
########################################################################################################################

eval:
	uv run ai_exercise/eval.py